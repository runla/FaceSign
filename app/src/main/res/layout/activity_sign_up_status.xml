<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up_status"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.facesign.activity.SignUpStatusActivity">

    <!-- 头部 -->
    <include layout="@layout/title_bar"></include>

    <!-- 内容 -->
    <!--<include layout="@layout/activity_sign_up_status_content"></include>-->

    <!-- tabLayout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_main_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:elevation="5dp"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/text_color"
        app:tabTextColor="@color/md_Indigo_A100"
        app:tabGravity="fill">
    </android.support.design.widget.TabLayout>

    <!--可滑动的布局内容  ViewPage-->
    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>

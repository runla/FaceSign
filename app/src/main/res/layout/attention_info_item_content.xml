<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <TextView
        android:gravity="center"
        android:id="@+id/tv_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Java 程序设计"
        android:ellipsize="end"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/md_title_text"/>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_weekend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="第 19 周"
        android:textColor="@color/colorTextViewNormal"
        android:textSize="@dimen/md_subtitle_text"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_day"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="星期一"
            android:ellipsize="end"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/md_normal_text"/>
        <TextView
            android:layout_toRightOf="@+id/tv_day"
            android:layout_toLeftOf="@+id/tv_status"
            android:id="@+id/tv_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="7 - 9节"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/md_normal_text"/>
        <TextView
            android:layout_marginRight="50dp"

            android:layout_alignParentRight="true"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="迟到"
            android:ellipsize="end"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/md_normal_text"/>
    </RelativeLayout>
